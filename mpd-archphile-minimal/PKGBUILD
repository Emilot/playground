# Maintainer: Tux <info@archphile.org>
# Website: http://archphile.org
# Based on mpd-minimal from AUR made by the following people:
# Maintainer: Bruno Pagani (a.k.a. ArchangeGabriel) <bruno.n.pagani at gmail dot com>

pkgname=mpd-archphile-minimal
_pkgname=mpd
pkgver=0.20.12
pkgrel=1
pkgdesc='Flexible, powerful, server-side application for playing music. Minimal version optimized for Archphile distribution.'
url='http://www.musicpd.org/'
license=('GPL')
arch=('armv7h' 'aarch64')
depends=('alsa-lib' 'libsndfile' 'flac' 'libsoxr' 'icu' 'libvorbis' 'libmad' 'curl' 'faad2' 'sqlite' 'libmms' 'libid3tag' 'libmpdclient')
makedepends=('boost' 'doxygen')
provides=("mpd=$pkgver")
conflicts=('mpd' 'mpd-archphile-sacd' 'mpd-archphile-native-dsd')
replaces=('mpd')
source=("https://www.musicpd.org/download/${_pkgname}/0.20/${_pkgname}-${pkgver}.tar.xz"
        'tmpfiles.d'
	'mpd.conf')
sha256sums=('e159ac0608fb85c891bd19375ed7056d5f9ec4ba492b052f24820513e774f709'
            'c1683ba35774c85e16c70e89f7e2ed1c09619512b1a273daabbd5e34d40439bd'
            'c494b91b2af48bc6239b779deb62c5b8e0132e9d5194fc94b3a6eef166ec75f5')
backup=('etc/mpd.conf')
install=install

build() {
	cd "${srcdir}/${_pkgname}-${pkgver}"

	./configure \
	--prefix=/usr \
	--sysconfdir=/etc \
	--enable-pipe-output \
	--enable-libmpdclient \
	--enable-alsa \
	--enable-mad \
	--enable-aac \
	--enable-vorbis \
	--enable-curl \
	--enable-mms \
	--enable-id3 \
	--enable-tcp \
	--enable-largefile \
	--enable-sndfile \
	--enable-soxr \
	--disable-libwrap \
	--disable-ao \
    	--disable-httpd-output \
    	--disable-jack \
    	--disable-openal \
    	--disable-oss \
    	--disable-pulse \
    	--disable-recorder-output \
    	--disable-roar \
    	--disable-shout \
    	--disable-adplug \
    	--disable-audiofile \
    	--disable-ffmpeg \
    	--disable-fluidsynth \
    	--disable-gme \
    	--disable-mikmod \
    	--disable-modplug \
    	--disable-mpg123 \
   	--disable-opus \
    	--disable-sidplay \
    	--disable-wavpack \
    	--disable-wildmidi \
    	--disable-expat \
    	--disable-ipv6 \
    	--disable-nfs \
    	--disable-smbclient \
    	--disable-soundcloud \
   	--disable-upnp \
    	--disable-bzip2 \
    	--disable-iso9660 \
    	--disable-zlib \
    	--disable-zzip \
    	--disable-cdio-paranoia \
    	--disable-lsr \
    	--disable-lame-encoder \
    	--disable-shine-encoder \
    	--disable-twolame-encoder \
    	--disable-vorbis-encoder \
    	--disable-wave-encoder \
    	--disable-neighbor-plugins \
    	--with-zeroconf=no \
	--with-systemduserunitdir=/usr/lib/systemd/user \
    	--with-systemdsystemunitdir=/usr/lib/systemd/system

	make
}

package() {
	cd "${srcdir}/${_pkgname}-${pkgver}"
	
	make DESTDIR="${pkgdir}" install
	install -Dm644 ../mpd.conf "${pkgdir}"/etc/mpd.conf
	install -Dm644 ../tmpfiles.d "${pkgdir}"/usr/lib/tmpfiles.d/mpd.conf
	install -d -g 45 -o 45 "${pkgdir}"/var/lib/mpd{,/playlists}

	install -Dm644 "${pkgdir}"/usr/lib/systemd/{system,user}/mpd.service
	sed '/WantedBy=/c WantedBy=default.target' -i "${pkgdir}"/usr/lib/systemd/{system,user}/mpd.service
    	sed '/ExecStart=/c ExecStart=/usr/bin/nice -n -16 /usr/bin/mpd --no-daemon' -i "${pkgdir}"/usr/lib/systemd/{system,user}/mpd.service

}
